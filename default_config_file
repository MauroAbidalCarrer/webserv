server
{
    listen localhost:8080;
    server_name my_awesome_server;
    error_page 404 /cat_HTTP_Responses/404.jpg;
    error_page 406 /cat_HTTP_Responses/406.jpg;
    error_page 500 /cat_HTTP_Responses/500.jpg;
    location /
    {
        root web_ressources/;
        default_file index.html;
        cgi .pl;
        cgi .cgi;
    }
}